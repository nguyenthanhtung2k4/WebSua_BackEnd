@model Shop.Application.DTOs.UpdateProductsAdminDTO

@{
    ViewBag.Title = "Cập nhật sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle mb-4">
        <h1 class="fw-bold">Cập nhật sản phẩm</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Products" asp-action="Index">Sản phẩm</a></li>
                <li class="breadcrumb-item active">Cập nhật</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="card shadow-sm border-0 rounded-3">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" asp-controller="Products" enctype="multipart/form-data">
                    @* Hidden key *@
                    <input type="hidden" asp-for="MaSua" />

                    <div class="mb-3">
                        <label asp-for="TenSua" class="form-label">Tên Sữa</label>
                        <input asp-for="TenSua" class="form-control" />
                        <span asp-validation-for="TenSua" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Gia" class="form-label">Giá</label>
                        <input asp-for="Gia" class="form-control" />
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SoLuong" class="form-label">Số lượng</label>
                        <input asp-for="SoLuong" class="form-control" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NgayTao" class="form-label">Ngày tạo</label>
                        <input asp-for="NgayTao" type="datetime-local" class="form-control" />
                        <span asp-validation-for="NgayTao" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Trạng thái</label>
                        <select asp-for="Status" class="form-select">
                            <option value="active">Hoạt động</option>
                            <option value="inactive">Không hoạt động</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">Ảnh hiện tại:</label>
                        <div class="row g-2">
                            @if (Model.HinhAnhs != null && Model.HinhAnhs.Any())
                            {
                                foreach (var img in Model.HinhAnhs)
                                {
                                    <div class="col-4 col-md-3">
                                        <img src="@Url.Content(img)" class="img-fluid border rounded shadow-sm" style="height: 120px; object-fit: cover;" />
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted">Chưa có ảnh.</p>
                            }
                        </div>
                        <small class="text-danger fst-italic d-block mt-2">* Nếu bạn tải ảnh mới, toàn bộ ảnh cũ sẽ bị xóa!</small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NewImageFiles" class="form-label">Chọn ảnh mới (nếu muốn thay):</label>
                        <input asp-for="NewImageFiles" type="file" class="form-control" multiple />
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lưu thay đổi
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
