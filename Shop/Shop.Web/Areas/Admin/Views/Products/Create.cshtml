@model Shop.Application.DTOs.AddProductsAdminDTO

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản lý Tài khoản"; // Đổi tiêu đề cho rõ ràng hơn
}


<main id="main" class="main">
<h2 class="text-2xl font-bold mb-4">Thêm sản phẩm mới</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" enctype="multipart/form-data" method="post" class="p-4 border rounded shadow-sm bg-white">
    <div class="form-group mb-3">
        <label asp-for="TenSua" class="form-label">Tên sản phẩm</label>
        <input asp-for="TenSua" class="form-control" />
        <span asp-validation-for="TenSua" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MaLoai" class="form-label">Mã loại</label>
            <select asp-for="MaLoai" class="form-control">
                <option value="4">Sữa bột</option>
                <option value="6">Sữa tươi</option>
                <option value="5">Sữa chua</option>
            </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gia" class="form-label">Giá</label>
        <input asp-for="Gia" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SoLuong" class="form-label">Số lượng</label>
        <input asp-for="SoLuong" class="form-control" type="number" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control" rows="4"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="NewImageFiles" class="form-label">Ảnh sản phẩm (có thể chọn nhiều)</label>
        <input asp-for="NewImageFiles" type="file" class="form-control" multiple accept="image/*" />
        <span asp-validation-for="NewImageFiles" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status" class="form-label">Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="active">Active</option>
            <option value="deleted">Deleted</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
