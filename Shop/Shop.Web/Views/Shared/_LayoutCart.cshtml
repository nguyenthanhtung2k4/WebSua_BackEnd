<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/remixicon/4.2.0/remixicon.min.css">
    <script src="https://cdn.tailwindcss.com/3.4.16"></script>
</head>
<body>
    <!--Header  -->
    <header id="nav_header" class="fixed top-0 left-0 right-0 bg-white shadow-sm z-50 transition-all duration-300">
        <div class="container mx-auto px-4 py-4 flex justify-between items-center">
            <a href="~/Home/" class="text-3xl font-pacifico text-primary" title="Trang chủ" aria-label="Quay lại trang chủ">MilkCo.</a>
            <div class="flex items-center space-x-4">
                <a href="~/Home/User" class="w-10 h-10 flex items-center justify-center text-gray-700 hover:text-primary transition-colors duration-300 relative" title="Cá nhân" aria-label="Trang cá nhân">
                    <i class="ri-user-line ri-lg"></i>
                </a>
                <a href="~/Auth/" class="w-10 h-10 flex items-center justify-center text-gray-700 hover:text-primary transition-colors duration-300 relative" title="Đăng xuất" aria-label="Đăng xuất">
                    <i class="ri-logout-box-r-line ri-lg"></i>
                </a>
                <button class="md:hidden w-10 h-10 flex items-center justify-center" aria-label="Mở menu">
                    <i class="ri-menu-line ri-lg"></i>
                </button>
            </div>
        </div>
    </header>

    <div>
        @RenderBody()
    </div>
    <!--  Footer-->
    <footer class="bg-gray-800 text-white pt-16 pb-8">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <a href="#" class="text-3xl font-['Pacifico'] text-white mb-6 block">MilkCo.</a>
                    <p class="text-gray-400 mb-6">
                        Chúng tôi cung cấp các sản phẩm sữa tươi nguyên chất, giàu dinh dưỡng
                        từ những trang trại được chứng nhận hữu cơ.
                    </p>
                    <div class="flex space-x-4">
                        <a href="#"
                           class="w-10 h-10 flex items-center justify-center bg-gray-700 rounded-full hover:bg-primary transition-all duration-300">
                            <i class="ri-facebook-fill"></i>
                        </a>
                        <a href="#"
                           class="w-10 h-10 flex items-center justify-center bg-gray-700 rounded-full hover:bg-primary transition-all duration-300">
                            <i class="ri-instagram-line"></i>
                        </a>
                        <a href="#"
                           class="w-10 h-10 flex items-center justify-center bg-gray-700 rounded-full hover:bg-primary transition-all duration-300">
                            <i class="ri-youtube-line"></i>
                        </a>
                        <a href="#"
                           class="w-10 h-10 flex items-center justify-center bg-gray-700 rounded-full hover:bg-primary transition-all duration-300">
                            <i class="ri-tiktok-line"></i>
                        </a>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-6">Sản phẩm</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Sữa tươi
                                nguyên chất
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Sữa
                                chua
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Phô
                                mai
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">Bơ</a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Sữa hương
                                vị
                            </a>
                        </li>
                    </ul>
                </div>

                <div>


                    <h3 class="text-lg font-semibold mb-6">Hỗ trợ</h3>
                    <ul class="space-y-3">
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Câu hỏi
                                thường gặp
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Chính sách
                                đổi trả
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Chính sách
                                bảo mật
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Điều khoản
                                sử dụng
                            </a>
                        </li>
                        <li>
                            <a href="#" class="text-gray-400 hover:text-white transition-colors duration-300">
                                Liên
                                hệ
                            </a>
                        </li>
                    </ul>
                    <h3 class="text-lg font-semibold mb-4">Phương thức thanh toán</h3>
                    <div class="flex space-x-3">
                        <span class="w-10 h-10 flex items-center justify-center bg-white rounded">
                            <i class="ri-visa-fill text-blue-800 ri-lg"></i>
                        </span>
                        <span class="w-10 h-10 flex items-center justify-center bg-white rounded">
                            <i class="ri-mastercard-fill text-red-500 ri-lg"></i>
                        </span>
                        <span class="w-10 h-10 flex items-center justify-center bg-white rounded">
                            <i class="ri-paypal-fill text-blue-600 ri-lg"></i>
                        </span>
                        <span class="w-10 h-10 flex items-center justify-center bg-white rounded">
                            <i class="ri-bank-card-fill text-gray-700 ri-lg"></i>
                        </span>
                    </div>
                </div>
                <div>
                    <h3 class="text-lg font-semibold mb-6">Địa chỉ</h3>
                    <p class="text-gray-400 mb-4">Nhấn vào Map để xem được vị trí chính xác nhất !</p>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3066.2866597643733!2d105.75521357431455!3d20.947671180681443!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313452eaa9c461c3%3A0x2a3e1c421f299adc!2zVHLGsOG7nW5nIMSQ4bqhaSBI4buNYyDEkOG6oWkgTmFt!5e1!3m2!1svi!2s!4v1751690184531!5m2!1svi!2s"
                            width="300" height="200" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>


                </div>
            </div>
            <div class="border-t border-gray-700 mt-12 pt-8 text-center">
                <p class="text-gray-400">© 2025 MilkCo. Web thuộc về Nguyễn Thanh Tùng | CNTT 17-15.</p>
            </div>
        </div>
    </footer>
    <!--JavaScript-->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4EADD3',
                        secondary: '#E0F7FA',
                        accent: '#398CA3',
                        'dark-blue': '#2D5B73',
                        'light-blue': '#EDF8FB',
                    },
                    borderRadius: {
                        'none': '0px',
                        'sm': '4px',
                        DEFAULT: '8px',
                        'md': '12px',
                        'lg': '16px',
                        'xl': '20px',
                        '2xl': '24px',
                        '3xl': '32px',
                        'full': '9999px',
                        'button': '8px'
                    },
                    fontFamily: {
                        sans: ['Roboto', 'sans-serif'],
                        pacifico: ['Pacifico', 'cursive'],
                    }
                }
            }
        }
    </script>
    <!-- File nhung vao   -->
    <script src="~/js/Home.js"></script>
    <script src="~/js/Cart.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("Style", required: false)
</body>
</html>
